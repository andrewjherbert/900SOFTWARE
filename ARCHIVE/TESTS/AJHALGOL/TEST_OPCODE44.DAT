c Algol function codes: procedure call actual array value to formal array name


on 903 16K

c translate trivial program
at ptr file ../../SCRIPTS/AJHALGOL/ALG1(AJH).BIN
j 8181

at ptr inline
opcode;
"begin" 
    "array" s[1:10];
    "procedure" p1(r); "array" r; 
    "begin"
        r[1] := r[1] + 1.0;
        "print" r[1]
    "end";
    "procedure" p2(r); "value" r; "array" r; p1(r);
    s[1] := 1.0; 
    p2(s);
    "print" s[1]       
"end"
<! halt !><!!>
at ptp file TEST.RLB
j 8
st 9
de ptp

printalgol TEST.RLB

c load new LP system
at ptr file ../../SCRIPTS/AJHALGOL/ALG16KLP(AJH).BIN
j 8181

c run trivial program
at ptr file TEST.RLB
at tty inline
R
C
<!!>
nonstop on
select out tty
nonprinting off
j 8
c runs off tty
nonstop off

delete TEST.RLB
sh t

